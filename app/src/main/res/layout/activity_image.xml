<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.mao.jetpack.widget.SampleCircleImageView

        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:src="@drawable/image_girl" />

    <com.mao.jetpack.widget.YLCircleImageView
        android:id="@+id/imageRound"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/image_girl"
        app:layout_constraintStart_toEndOf="@+id/image"
        app:layout_constraintTop_toTopOf="parent"
        app:radiusYL="20dp" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imagePic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/image_girl"
        app:layout_constraintStart_toEndOf="@+id/imageRound"
        app:layout_constraintTop_toTopOf="parent" />

    <com.mao.jetpack.ui.image.EllipsizeViewPlus
        android:id="@+id/tvDest"
        android:layout_width="200dp"
        android:textSize="19sp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagePic"
        tools:text="《奇迹笨小孩》专项" />

    <com.mao.jetpack.ui.image.TextViewEllipsize
        android:id="@+id/tvDestMY"
        android:layout_width="200dp"
        android:textSize="19sp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:maxLines="2"
        android:text="《奇迹笨小孩love-lovelove》专项"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDest"
        app:my_delimiter="》"
        app:my_maxLine="2"
        app:my_replace_symbol="..."
        />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageClip"
        android:layout_width="300dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDestMY" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageClip">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageClip2"
            android:layout_width="300dp"
            android:layout_height="200dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>